        <script>
            let historicoPassos = [];
            
            const flowContainer = document.getElementById('story-flow');
            const btnVoltar = document.getElementById('btn-voltar');
            
            

            function proximoPasso(idMostrar, idEsconder) {
                const stepTemplate = document.querySelector(`#all-steps-template [data-base-id="${idMostrar}"]`);
                
                if (!stepTemplate) {
                    console.error("Template do passo não encontrado:", idMostrar);
                    return;
                }

                
                const currentStepElement = flowContainer.lastElementChild;
                if (currentStepElement) {
                    currentStepElement.classList.remove('active-step');
                    currentStepElement.classList.add('passo-completo'); 
                }
                
              
                historicoPassos.push(idEsconder);

                
                const clone = stepTemplate.cloneNode(true);
                clone.removeAttribute('style'); 
                clone.classList.remove('fluxo-step');
                clone.classList.add('active-step'); 
                
                flowContainer.appendChild(clone);
                
               
                clone.scrollIntoView({ behavior: 'smooth', block: 'start' });

                
                if (historicoPassos.length > 0) {
                    btnVoltar.classList.remove('hidden');
                }
            }

            function voltarPasso() {
                if (historicoPassos.length === 0) {
                    btnVoltar.classList.add('hidden');
                    return;
                }
                
              
                const passoRemover = flowContainer.lastElementChild;
                if (passoRemover) {
                    passoRemover.remove();
                }
                
               
                historicoPassos.pop();
                
               
                const passoRestaurar = flowContainer.lastElementChild;

                if (passoRestaurar) {
                  
                    passoRestaurar.classList.add('active-step');
                    passoRestaurar.classList.remove('passo-completo');
                    
                    passoRestaurar.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
                
               
                if (historicoPassos.length === 0) {
                    btnVoltar.classList.add('hidden');
                }
            }

            
            
            btnVoltar.addEventListener('click', voltarPasso);

            flowContainer.addEventListener('click', function(event) {
                if (event.target.classList.contains('btn-escolha')) {
                    const targetBtn = event.target;
                    
                    const currentStepContainer = flowContainer.lastElementChild;
                    if (!currentStepContainer || !currentStepContainer.contains(targetBtn)) {
                        return;
                    }

                    const idMostrar = targetBtn.dataset.target;
                    const idEsconder = targetBtn.dataset.current;

                    if (idMostrar && idEsconder) {
                        proximoPasso(idMostrar, idEsconder);
                    }
                }
            });
        </script>
    </div>
</body>
</html>
